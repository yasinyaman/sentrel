# Sentrel - Environment Variables
# Copy this file to .env and adjust values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=sentrel
DEBUG=false
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000

# =============================================================================
# Authentication
# =============================================================================
# Comma-separated list of allowed public keys
# Leave empty to allow all keys
ALLOWED_PUBLIC_KEYS=

# Comma-separated list of allowed project IDs
# Leave empty to allow all projects
PROJECT_IDS=

# =============================================================================
# OpenSearch Settings
# =============================================================================
# Comma-separated list of OpenSearch hosts
OPENSEARCH_HOSTS=http://localhost:9200

# Authentication (optional)
OPENSEARCH_USERNAME=
OPENSEARCH_PASSWORD=

# Index settings
OPENSEARCH_INDEX_PREFIX=sentry-events
OPENSEARCH_USE_SSL=false

# =============================================================================
# Redis Settings (for Celery)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# Processing Settings
# =============================================================================
# Use Celery for async processing (set to false for synchronous)
USE_CELERY=true

# Batch processing settings
BATCH_SIZE=100
BATCH_TIMEOUT_SECONDS=5

# =============================================================================
# Enrichment Settings
# =============================================================================
# GeoIP database path (optional, download from MaxMind)
ENABLE_GEOIP=false
GEOIP_DATABASE_PATH=

# =============================================================================
# Docker Compose Override (for development)
# =============================================================================
# OPENSEARCH_HOSTS=http://opensearch:9200
# REDIS_HOST=redis
