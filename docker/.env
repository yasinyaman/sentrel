# =============================================================================
# Sentrel - Docker Environment Variables
# =============================================================================

# Application
APP_NAME=sentrel
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# =============================================================================
# Security
# =============================================================================
# Set to true in production to require authentication
AUTH_REQUIRED=false
# Comma-separated list of allowed public keys (required if AUTH_REQUIRED=true)
ALLOWED_PUBLIC_KEYS=[]
# Comma-separated list of allowed CORS origins (empty = deny all in production)
ALLOWED_CORS_ORIGINS=[]
# Maximum request body size in bytes (default 5MB)
MAX_REQUEST_SIZE=5242880

# =============================================================================
# OpenSearch
# =============================================================================
OPENSEARCH_HOSTS=["http://opensearch:9200"]
OPENSEARCH_USERNAME=
OPENSEARCH_PASSWORD=
OPENSEARCH_INDEX_PREFIX=sentry-events
OPENSEARCH_USE_SSL=false
OPENSEARCH_VERIFY_CERTS=false
OPENSEARCH_CA_CERTS=

# =============================================================================
# Redis
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# Processing
# =============================================================================
USE_CELERY=true
BATCH_SIZE=100
BATCH_TIMEOUT_SECONDS=5

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# =============================================================================
# Projects (empty = allow all)
# =============================================================================
PROJECT_IDS=[]

# =============================================================================
# Enrichment
# =============================================================================
ENABLE_GEOIP=false
GEOIP_DATABASE_PATH=

# =============================================================================
# OpenSearch Settings
# =============================================================================
OPENSEARCH_JAVA_OPTS=-Xms512m -Xmx512m

# =============================================================================
# Compose Project Name
# =============================================================================
COMPOSE_PROJECT_NAME=sentrel
